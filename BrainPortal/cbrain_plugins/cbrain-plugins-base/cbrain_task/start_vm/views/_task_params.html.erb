<strong>Disk image: </strong><br/>
<%=  select_tag :disk_image.to_la, options_for_select(params[:available_disk_images], params[:disk_image]) %>
<br/><br/>

<strong>VM username:</strong><br/>
<%= text_field_tag :vm_user.to_la, params[:vm_user], size:15 %>
<br/>
<br/>

<strong>SSH key pair:</strong><br/>
<%=  select_tag :ssh_key_pair.to_la, options_for_select(params[:available_ssh_key_pairs], params[:ssh_key_pair]) %>
<br/>
<br/>

<strong>Instance type: </strong><br/>
<%=  select_tag :instance_type.to_la, options_for_select(params[:available_instance_types], params[:instance_type]) %>
<br/><br/>

<strong>VM job slots:</strong><br/>
   <%= text_field_tag :job_slots.to_la, params[:job_slots], size:3 %>
<br/><br/>

<strong>VM boot timeout (s):</strong><br/>
   <%= text_field_tag :vm_boot_timeout.to_la, params[:vm_boot_timeout], size:4 %>
<br/><br/>

<strong>VM ssh tunnel port:</strong><br/>
   <%= text_field_tag :vm_ssh_tunnel_port.to_la, params[:vm_ssh_tunnel_port], size:4 %>
<br/><br/>

<strong>Number of instances to start (&le;20):</strong><br/>
   <%= text_field_tag :number_of_vms.to_la, params[:number_of_vms], size:5 %>



