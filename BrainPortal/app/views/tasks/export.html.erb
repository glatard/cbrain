<% title "Exported Task: " + @task.name %>

<h1>NIDM-Workflow export of task <%=@task.id%></h1>

<% indent = 0 %>
<% @task.nidm_w_export.split("\n").each do |s| %>
  <% if s.include? "{" or s.include? "[" %>
    <% indent+=1 %>
  <% end %>
  <% if s.include? "}" or s.include? "]"  %>
    <% indent-=1 %>
  <% end %>
  <% (0..indent).each do |i| %>
    &nbsp;
  <% end %>
  <%= s %>
  <br/>
<% end %>
